doctype html
head
  meta(charset='UTF-8')
  meta(http-equiv='X-UA-Compatible' content='IE=edge')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  // font awesome icon
  link(rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css' integrity='sha512-Fo3rlrZj/k7ujTnHg4CGR2D7kSs0v4LLanw2qksYuRlEzO+tcaEPQogQ0KaoGN26/zrn20ImR1DfuLWnOo7aBA==' crossorigin='anonymous' referrerpolicy='no-referrer')
  title Blog
  link(rel='stylesheet' type='text/css' href='/style.css')
// header
header
  include _header
  .banner
    .container
      h1.banner-title
        span Art.
        |  Design Blog
      p everything that you want to know about art &amp; design
      form(action="/search" method="GET")
        input.search-input(type='text' name="keyword" placeholder='find your food . . .')
        button.search-btn(type='submit')
          i.fas.fa-search
// end of header
// design
section#blog.blog
  .container
    a.special-btn(href='/article/new' style="margin: auto 1rem") New blog
    .title
      h2 Latest Blog
      p recent blogs
    .blog-content
      // item
      each article in articles
        .blog-item
          .blog-text
            span #{article.createdAt.toLocaleDateString()} by #{article.author}
            h2= article.title
            p= article.description
            a.special-btn(href='/article/'+article._id) Read More
            if article.author == name
              a.special-btn(href='/article/edit/'+article._id) Edit
              form(action="/article/"+article._id+"?_method=DELETE", method="post" style="display: inline-block") 
                button(type='submit') Delete
      // end of item
// end of design
